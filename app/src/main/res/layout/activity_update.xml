<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"/>

    <LinearLayout
        android:padding="20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="Display Name"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/name"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="215dp"
                    android:hint="e.g: Kunal"
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Display name is what your clients will see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="Mobile Number"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/phone_number"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="215dp"
                    android:hint="e.g: 123456789"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:text="Email Address"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:background="@drawable/custom_edittext"
                    android:layout_width="215dp"
                    android:id="@+id/email"
                    android:hint="e.g: abc@gmail.com"
                    android:padding="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="Notes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/note"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="match_parent"
                    android:hint="Add a note about your client here"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_height="120dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="600dp"
        android:orientation="vertical"
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/save"
            android:text="SAVE"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/save_asset"
            android:paddingLeft="120dp"
            android:paddingRight="120dp"/>

    </LinearLayout>

</RelativeLayout>